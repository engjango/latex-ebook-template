% Typography and Microtype Optimization
\usepackage[
    activate={true,nocompatibility},
    final,
    tracking=true,
    kerning=true,
    spacing=true,
    factor=1100,
    stretch=10,
    shrink=10
]{microtype}   % Advanced typography refinement for enhanced readability

% Localization and Language Support
\usepackage[brazilian]{babel} % Brazilian Portuguese language settings
\addto\captionsbrazilian{\renewcommand{\contentsname}{Conte√∫do}}

% Typography and Graphic Packages
\usepackage{lettrine}   % Drop caps for elegant chapter openings
\usepackage{graphicx}   % Advanced image handling
\usepackage{xcolor}     % Color management and customization
\usepackage{ebgaramond} % Elegant Garamond font family
\usepackage{tikz}       % Advanced graphic and diagram creation
\usetikzlibrary{positioning}

% Typographic Spacing Helpers
\newcommand{\hsp}{\kern 1pt}    % Fine-tuning for nested quotation marks

% Paragraph and Line Spacing Configuration
\renewcommand{\baselinestretch}{1.125}      % Improved line spacing for readability
\setlength{\parskip}{0pt}                   % Consistent paragraph spacing
\setlength{\parindent}{1em}                 % Standard paragraph indentation

% Typography Refinement
\frenchspacing    % Consistent inter-word spacing after sentences

% Pagination and Orphan Prevention
\widowpenalty=10000    % Prevent widow lines at page bottom
\clubpenalty=10000     % Prevent orphan lines at page top

% Page Geometry and Layout
\usepackage[
    paperheight=9in,   % Standard book height
    paperwidth=6in,    % Standard book width
    top=0.75in,        % Top margin
    bottom=0.75in,     % Bottom margin
    outer=0.75in,      % Outer margin
    inner=0.875in      % Inner margin (slightly wider for binding)
]{geometry}

% Typesetting Optimization
\sloppy    % Reduce overfull horizontal box warnings

% Table of Contents Customization
\usepackage[titles]{tocloft}
\renewcommand{\cftchapfont}{\large\itshape}      % Italicize chapter titles
\renewcommand{\cftchappagefont}{\normalfont}     % Normal font for page numbers
\renewcommand{\numberline}[1]{}                  % Remove default numbering

% Chapter Heading Styling
\usepackage[center,sc]{titlesec}
\renewcommand{\thechapter}{\Roman{chapter}}      % Roman numeral chapter numbers
\titleformat{\chapter}[block]
  {\normalfont\scshape\huge\centering}           % Centered, small caps, large chapter titles
  {\thechapter\\}
  {0pt}
  {}

% Header and Footer Configuration
\usepackage{fancyhdr}
\setlength{\headheight}{15pt}
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\fancyhf[CFE,CFO]{\thepage}         % Page numbers in footer
\fancyhead[CE]{\itshape\authorname} % Author name on left-side header
\fancyhead[CO]{\itshape\booktitle}  % Book title on right-side header

% Custom Color Palette
\definecolor{customgold}{RGB}{203,161,53}    % Elegant gold accent color
